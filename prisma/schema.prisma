// prisma/schema.prisma

generator client {
  provider        = "prisma-client-js"
  // This feature is required for Vercel's connection pooling
  previewFeatures = ["driverAdapters"] 
}

datasource db {
  // Switch the provider to postgresql for production
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  passwordResetToken   String?   @unique
  passwordResetExpires DateTime?
  reviews Review[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}


// Add this to the end of prisma/schema.prisma

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?  @db.Text
  createdAt DateTime @default(now())
  botId     String   // The ID of the bot from your bots.js file
  
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}